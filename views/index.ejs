<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Drivebox</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('shared/layout') %>

  <main>
    <% if (user) { %>
      <main style="padding: 2rem;">
        <p>Welcome back, <%= user.username %></p>

        <h2>Files</h2>
        <ul>
          <% files.forEach(file => { %>
            <li><%= file.name %> (<%= file.mimeType %>, <%= file.size %> bytes)</li>
          <% }) %>
        </ul>

        <h2>Folders</h2>
        <ul>
          <% folders.forEach(folder => { %>
            <a href="/folders/<%= folder.id %>"}><%= folder.name %></li>
          <% }) %>
        </ul>
      </main>
    <% } else { %>
      <main class="content-card-wrapper">
        <%- include('shared/login-form') %>
      </main>
    <% } %>
  </main>
</body>
</html>
